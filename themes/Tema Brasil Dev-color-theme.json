{
	"name": "Tema Brasil Dev Dark",
	"type": "dark",
	"colors": {
		// ============ CORES PRINCIPAIS BRASIL ============
		"editor.background": "#001A33",
		"editor.foreground": "#E6F3FF",
		"editor.lineHighlightBackground": "#009C3B15",
		"editor.selectionBackground": "#FFDF0025",
		"editor.inactiveSelectionBackground": "#FFDF0010",
		"editorLineNumber.foreground": "#6B8CBE",
		
		// ============ BARRAS LATERAIS ============
		"activityBar.background": "#002752",
		"activityBar.foreground": "#FFFFFF",
		"activityBarBadge.background": "#FFDF00",
		"activityBarBadge.foreground": "#002752",
		
		"sideBar.background": "#002752",
		"sideBar.foreground": "#E6F3FF",
		"sideBarTitle.foreground": "#FFDF00",
		"sideBarSectionHeader.background": "#009C3B",
		"sideBarSectionHeader.foreground": "#FFFFFF",
		
		// ============ BARRA DE STATUS ============
		"statusBar.background": "#FFDF00",
		"statusBar.foreground": "#002752",
		"statusBarItem.hoverBackground": "#FFC800",
		"statusBar.debuggingBackground": "#009C3B",
		
		// ============ BARRA DE TÍTULO ============
		"titleBar.activeBackground": "#001A33",
		"titleBar.activeForeground": "#E6F3FF",
		"titleBar.inactiveBackground": "#002752",
		"titleBar.inactiveForeground": "#A3C6E8",
		
		// ============ ABAS (TABS) ============
		"tab.activeBackground": "#001A33",
		"tab.activeForeground": "#FFFFFF",
		"tab.inactiveBackground": "#002752",
		"tab.inactiveForeground": "#A3C6E8",
		"tab.border": "#009C3B",
		
		// ============ BOTÕES ============
		"button.background": "#009C3B",
		"button.foreground": "#FFFFFF",
		"button.hoverBackground": "#00B844",
		
		// ============ INPUTS ============
		"input.background": "#002752",
		"input.foreground": "#E6F3FF",
		"input.border": "#009C3B",
		"input.placeholderForeground": "#88AADD",
		
		// ============ LISTAS ============
		"list.activeSelectionBackground": "#009C3B40",
		"list.focusBackground": "#FFDF0020",
		"list.hoverBackground": "#00277630",
		
		// ============ DESTAQUES ============
		"focusBorder": "#FFDF00",
		"selection.background": "#FFDF0040"
	},
	"tokenColors": [
		// ============ SYNTAX BRASILEIRA ============
		{
			"name": "Comentários",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#6B8CBE"
			}
		},
		{
			"name": "Strings - Verde Brasil",
			"scope": [
				"string",
				"constant.other.symbol",
				"constant.other.key"
			],
			"settings": {
				"foreground": "#00CC66"
			}
		},
		{
			"name": "Números - Amarelo Brasil",
			"scope": [
				"constant.numeric",
				"constant.language",
				"keyword.other.unit"
			],
			"settings": {
				"foreground": "#FFB347"
			}
		},
		{
			"name": "Funções - Azul Claro",
			"scope": [
				"entity.name.function",
				"meta.function-call",
				"support.function"
			],
			"settings": {
				"foreground": "#82AAFF"
			}
		},
		{
			"name": "Classes - Amarelo",
			"scope": [
				"entity.name.class",
				"support.class",
				"support.type"
			],
			"settings": {
				"foreground": "#FFCB6B"
			}
		},
		{
			"name": "Keywords - Verde",
			"scope": [
				"keyword",
				"storage.type",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#009C3B"
			}
		},
		{
			"name": "Variáveis - Branco",
			"scope": [
				"variable",
				"meta.block variable.other"
			],
			"settings": {
				"foreground": "#E6F3FF"
			}
		},
		{
			"name": "Operadores - Azul Claro",
			"scope": [
				"keyword.operator",
				"punctuation"
			],
			"settings": {
				"foreground": "#89DDFF"
			}
		},
		{
			"name": "HTML Tags - Verde",
			"scope": [
				"entity.name.tag",
				"meta.tag.sgml"
			],
			"settings": {
				"foreground": "#00CC66"
			}
		},
		{
			"name": "HTML Attributes - Amarelo",
			"scope": [
				"entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#FFDF00"
			}
		},
		{
			"name": "CSS Properties - Azul",
			"scope": [
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#82AAFF"
			}
		}
	]
}